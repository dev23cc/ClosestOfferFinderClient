<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gr.teicm.se.closestofferfinder.client.gr.teicm.se.closestofferfinder.client.presentation.activities.IntroActivity"
    android:background="@android:color/holo_purple">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:id="@+id/button4"
        android:background="#ff25ff9f"
        android:onClick="ProceedButtonClicked"
        android:textAlignment="center"
        android:textColor="#ffffed20"
        android:textColorHighlight="#ffffe486"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/button4">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/intro_pic1"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</RelativeLayout>
