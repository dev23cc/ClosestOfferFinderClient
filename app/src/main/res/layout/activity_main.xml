<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Offers"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:onClick="OnClickedTrackOffers"
        android:nestedScrollingEnabled="false" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="303dp"
            android:id="@+id/MyOffers"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client App Version"
            android:id="@+id/button3"
            android:layout_gravity="right"
            android:layout_weight="0.05"
            android:onClick="OnClickedClientVersion" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WS Version"
            android:id="@+id/button2"
            android:layout_weight="0.05"
            android:onClick="OnClickedWSVersion" />
    </LinearLayout>

</RelativeLayout>
